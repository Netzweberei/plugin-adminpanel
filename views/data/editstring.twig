{% extends "@plugin/adminpanel/layouts/main.twig" %}

{% block title %}Daten editieren{% endblock %}
{% block subtitle %}{{ path }}{% endblock %}

{% block alert %}
    <div class="alert alert-info">Formular-Konfiguration fehlt.</div>
    {% if saved %}<div class="alert alert-success">Die Daten wurden gesichert.</div>{% endif %}
{% endblock %}

{% block content %}

    <form action="" method="post" class="pure-form">
        <textarea wrap="off" class="nowrap pure-input-1" rows="10" cols="60" name="content">{{ content }}</textarea>
        <button class="pure-button pure-button-primary" name="button1" type="submit">Sichern</button>
        <a href="?action=data/index" class="pure-button">Abbrechen</a>
    </form>

{% endblock %}
